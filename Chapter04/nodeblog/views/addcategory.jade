extends layout

block content
	h1=title
	ul.errors
		if errors
			each error, i in errors
				li.alert.alert-danger #{error.msg}
	form(method='post', action='/categories/add')
		.form-group
			label Name:
			input.form-control(name='name', type='text')
		input.btn.btn-default(name='submit',type='submit',value='Save')